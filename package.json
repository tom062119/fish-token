{
  "name": "fish-token",
  "version": "1.0.0",
  "description": "Fish Token - Polygon链上的ERC-20代币",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "deploy:local": "npx hardhat run scripts/deploy.js",
    "deploy:mumbai": "npx hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "npx hardhat run scripts/deploy.js --network polygon",
    "verify:mumbai": "npx hardhat run scripts/verify.js --network mumbai",
    "verify:polygon": "npx hardhat run scripts/verify.js --network polygon",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "preview": "cd frontend && npm run preview",
    "install:frontend": "cd frontend && npm install",
    "setup": "npm install && npm run install:frontend && npm run compile"
  },
  "keywords": [
    "ethereum",
    "polygon",
    "erc20",
    "token",
    "fish",
    "blockchain",
    "defi"
  ],
  "author": "Fish Token Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^4.9.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/fish-token.git"
  },
  "bugs": {
